{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>
    <p>
        <a href="{{ path('category_edit', {'id': 0}) }}">Ajouter une nouvelle catégorie</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
                <td>
                    <a href="{{ path('category_delete', {'id': category.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune catégorie enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}