{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>
    <p>
        <a href="{{ path('article_edit', {'id': 0}) }}">Ajouter un nouvel article</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Résumé</th>
                <th>Utilisateur</th>
                <th>Date de création</th>
                <th>Nombre de commentaires</th>
                <th>Afficher</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.category.title }}</td>
                <td>{{ article.summary }}</td>
                <td>{{ article.user.email }}</td>
                <td>{{ article.createdat|date("m/d/Y H:i") }}</td>
                <td>{{ article.comments|length }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Afficher</a>
                </td>
                <td>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
                <td>
                    <a href="{{ path('article_delete', {'id': article.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun article enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}